<?xml version='1.0' encoding='utf-8' ?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="metier.Film" table="film" lazy="false">
		<id name="id" type="integer" column="id">
			<generator class="native" />
		</id>
		<property name="titre"			type="string"	column="titre" />
		<property name="annee_sortie"	type="int"		column="annee" />
		<property name="cout"			type="double"	column="cout" />
		<property name="affiche"		type="string"	column="affiche" />
		<property name="description"	type="string"	column="description" />
		<property name="date_maj"		type="date"		column="date_maj" />
		<property name="note_moyenne"	type="double"	column="note_moyenne" />
		<set name="producteurs" table="producteurs" lazy="false">
			<key column="filmid" />
			<many-to-many column="personneid" class="metier.Personne" />
		</set>
		<set name="realisateurs" table="realisateurs" lazy="false">
			<key column="filmid" />
			<many-to-many column="personneid" class="metier.Personne" />
		</set>
		<set name="acteurs" table="acteurs" lazy="false">
			<key column="filmid" />
			<many-to-many column="personneid" class="metier.Personne" />
		</set>
		<set name="recompenses" lazy="false" cascade="all">
			<key column="filmid" />
			<one-to-many class="metier.Recompense" />
		</set>
	</class>
</hibernate-mapping>